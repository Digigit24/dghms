# ===========================================
# DigiHMS - Hospital Management System
# Environment Variables Template
# Copy to .env and update with your values
# ===========================================

# --- Django Core Settings ---
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted CSRF origins (with protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:8002,https://your-domain.com

# --- Database Configuration ---
# Recommended: Use DATABASE_URL for easier configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dghms

# Example DATABASE_URL formats:
# Development: postgresql://postgres:password@localhost:5432/hms_dev
# Production:  postgresql://user:pass@production-host:5432/hms_prod

# Legacy: Discrete database variables (for backward compatibility)
# DB_NAME=dghms
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_HOST=localhost
# DB_PORT=5432

# --- SuperAdmin Integration Settings (REQUIRED) ---
# URL of the centralized SuperAdmin application (usually Port 8000)
SUPERADMIN_URL=https://admin.celiyo.com

# JWT Settings - MUST match SuperAdmin configuration exactly
# Get these values from your SuperAdmin administrator
JWT_SECRET_KEY=your-jwt-secret-key-must-match-superadmin
JWT_ALGORITHM=HS256

# --- CORS Configuration ---
# Set to True to allow all origins (NOT recommended for production)
CORS_ALLOW_ALL_ORIGINS=False

# Comma-separated list of allowed CORS origins (include SuperAdmin URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,https://admin.celiyo.com

# --- Email Configuration (Optional) ---
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# --- AWS S3 Configuration (Optional - for production media files) ---
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# --- Redis Configuration (Optional - for caching/celery) ---
REDIS_URL=redis://localhost:6379/0

# --- Sentry Configuration (Optional - for error tracking) ---
SENTRY_DSN=

# --- Razorpay Configuration (for pharmacy payments) ---
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ===========================================
# IMPORTANT NOTES:
# ===========================================
# 1. JWT_SECRET_KEY MUST match the SuperAdmin application exactly
# 2. SUPERADMIN_URL should point to your SuperAdmin instance (Port 8000)
# 3. DATABASE_URL is the recommended way to configure database
# 4. For production, set DEBUG=False and use strong SECRET_KEY
# 5. Add SUPERADMIN_URL to CORS_ALLOWED_ORIGINS for API calls
# ===========================================
